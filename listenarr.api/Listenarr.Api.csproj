<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Canonical application version. Update this to set the next released version. -->
    <Version>1.0.0</Version>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="SharpCompress" Version="0.36.0" />
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.10" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.10">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.10" />
    <PackageReference Include="Microsoft.Playwright" Version="1.48.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.9.0" />
    <PackageReference Include="HtmlAgilityPack" Version="1.11.67" />
  </ItemGroup>

  <!-- Build frontend (fe) as part of dotnet publish for monorepo single-artifact deployments -->
  <PropertyGroup>
    <!-- Set to true to skip frontend build during publish (useful for dev machines without Node) -->
    <SkipFrontendBuild Condition="'$(SkipFrontendBuild)'==''">false</SkipFrontendBuild>
  <!-- Parent directory of listenarr.api is the repo root; fe lives there -->
  <FrontendDir>$(MSBuildProjectDirectory)\..\fe</FrontendDir>
  <FrontendDist>$(FrontendDir)\dist</FrontendDist>
  </PropertyGroup>

  <Target Name="BuildFrontend" BeforeTargets="Publish" Condition="'$(SkipFrontendBuild)'!='true'">
    <Message Importance="high" Text="Building frontend (fe) at $(FrontendDir)" />

    <!-- Attempt to run npm commands; these will fail the publish if Node/npm is not available. You can set SkipFrontendBuild=true to skip. -->
    <Exec WorkingDirectory="$(FrontendDir)" Command="npm ci" />
    <Exec WorkingDirectory="$(FrontendDir)" Command="npm run build" />

    <!-- Ensure wwwroot exists then copy built files into API wwwroot so the published API contains the frontend static site -->
    <MakeDir Directories="$(MSBuildProjectDirectory)\wwwroot" Condition="!Exists('$(MSBuildProjectDirectory)\wwwroot')" />

    <ItemGroup>
      <FrontendDistFiles Include="$(FrontendDist)\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(FrontendDistFiles)"
          DestinationFiles="@(FrontendDistFiles->'$(MSBuildProjectDirectory)\\wwwroot\\%(RecursiveDir)%(Filename)%(Extension)')"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
